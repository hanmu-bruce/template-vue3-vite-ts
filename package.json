{
    "name": "template-vue3-vite-ts",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc --noEmit && vite build",
        "preview": "vite preview",
        "lint:eslint": "eslint --cache \"*.{js,jsx,ts,tsx,vue}",
        "lint:prettier": "prettier --write \"*.{js,jsx,ts,tsx,vue,html,css,scss,less,json,md}",
        "lint:lint-staged": "lint-staged",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,vue}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{html,css,scss,less,json,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "element-plus": "^2.2.19",
        "normalize.css": "^8.0.1",
        "pinia": "^2.0.23",
        "pinia-plugin-persistedstate": "^2.3.0",
        "vue": "^3.2.37",
        "vue-router": "^4.1.5"
    },
    "devDependencies": {
        "@types/node": "^18.11.3",
        "@typescript-eslint/eslint-plugin": "^5.40.1",
        "@typescript-eslint/parser": "^5.40.1",
        "@vitejs/plugin-vue": "^3.1.0",
        "@vitejs/plugin-vue-jsx": "^2.0.1",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-vue": "^9.6.0",
        "husky": "^8.0.0",
        "less": "^4.1.3",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "typescript": "^4.6.4",
        "vite": "^3.1.0",
        "vite-plugin-mock": "^2.9.6",
        "vite-plugin-windicss": "^1.8.8",
        "vue-eslint-parser": "^9.1.0",
        "vue-tsc": "^0.40.4",
        "windicss": "^3.5.6"
    }
}
